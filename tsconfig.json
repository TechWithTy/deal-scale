{
	"files": [],
	"references": [
		{
			"path": "./tsconfig.app.json"
		},
		{
			"path": "./tsconfig.node.json"
		}
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
                "types": ["@testing-library/jest-dom", "jest"],
		"noImplicitAny": false,
		"noUnusedParameters": false,
		"skipLibCheck": true,
		"allowJs": true,
		"noUnusedLocals": false,
		"strictNullChecks": false,
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"next.config.ts",
		"src/utils/__tests__/metadata/caonical/index.test.ts",
		"src/types/jest-dom.d.ts"
	],
	"exclude": [
		"node_modules",
		"scripts",
		"scripts/**/*"
	]
}
