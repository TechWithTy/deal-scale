{
        "files": [],
        "references": [
                {
                        "path": "./tsconfig.app.json"
                },
                {
                        "path": "./tsconfig.node.json"
                }
        ],
        "compilerOptions": {
                "baseUrl": ".",
                "paths": {
                        "@/*": ["./src/*"],
                        "@external/dynamic-hero": [
                                "./src/components/dynamic-hero/src/index.ts"
                        ],
                        "@external/dynamic-hero/*": [
                                "./src/components/dynamic-hero/src/*"
                        ]
                },
                "noImplicitAny": false,
                "noUnusedParameters": false,
                "skipLibCheck": true,
                "allowJs": true,
                "noUnusedLocals": false,
                "strictNullChecks": false,
                "target": "ES2017",
                "lib": ["dom", "dom.iterable", "esnext"],
                "strict": false,
                "noEmit": true,
                "incremental": true,
                "module": "esnext",
                "esModuleInterop": true,
                "moduleResolution": "node",
                "resolveJsonModule": true,
                "isolatedModules": true,
                "jsx": "preserve",
                "plugins": [
                        {
                                "name": "next"
                        }
                ]
        },
        "include": [
                "next-env.d.ts",
                ".next/types/**/*.ts",
                "**/*.ts",
                "**/*.tsx",
                "next.config.ts"
        ],
        "exclude": [
                "node_modules",
                "**/__tests__/**",
                "**/*.__tests__.ts",
                "**/*.__tests__.tsx",
                "**/*.test.ts",
                "**/*.test.tsx",
                "**/*.spec.ts",
                "**/*.spec.tsx",
		"src/testHelpers",
		"tools",
                "tests",
                "scripts",
                "scripts/**/*"
        ]
}
