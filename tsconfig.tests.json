{
        "extends": "./tsconfig.json",
        "compilerOptions": {
                "types": ["jest", "@testing-library/jest-dom"],
                "noEmit": true,
                "jsx": "react-jsx"
        },
        "include": [
                "src",
                "tests",
                "**/__tests__/**/*.ts",
                "**/__tests__/**/*.tsx",
                "**/__tests__/**/*.mts",
                "**/__tests__/**/*.cts",
                "**/*.test.ts",
                "**/*.test.tsx",
                "**/*.spec.ts",
                "**/*.spec.tsx",
                "src/types/jest-dom.d.ts",
                "jest.config.js",
                "jest.setup.js",
                "jest.env.js"
        ],
        "exclude": []
}
